<h1>Listing tasks</h1>

<table>
  <tr>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.name, task %></td>
    
    <ul>
    <% task.comments.each do |c| %>
    	<li><%= h c.comment %></li>
    <% end %>
    </ul>
    
    <td><%= link_to 'x', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>